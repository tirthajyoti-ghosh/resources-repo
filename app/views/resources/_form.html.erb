<%= form_with(model: @resource) do |f| %>
    
    <div class="field">
        <%= f.label :link, "Link:*" %><br>
        <%= f.text_field :link, required: true %>
    </div>
    
    <div class="field">
        <%= f.label :notes, "Notes:*" %><br>
        <%= f.text_area :notes, required: true %>
    </div>
    
    <div class="field">
        <%= f.label :category_list, "Categories:*" %>
        <br>
        <%= f.text_field :category_list, placeholder: 'Input categories separated by commas', class: "input", required: true %>
    </div>
    
    <div class="field">
        <%= f.submit %>
    </div>
<% end %>